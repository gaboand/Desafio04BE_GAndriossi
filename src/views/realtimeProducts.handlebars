
<main class="container">
  <div>
  <h1 class="title">REALTIME CON WEBSOCKET</h1>
  </div>
  <div style="display: flex;">
      <form id="add" style="flex: 1;">
          <h3>Agregar producto:</h3>
          <div>
              <label>Title:</label>
              <input type="text" id="title" />
          </div>
          <div>
              <label>Description:</label>
              <textarea id="description"></textarea>
          </div>
          <div>
              <label>Price:</label>
              <input type="text" id="price" />
          </div>
          <div>
              <label>Thumbnail:</label>
              <input type="text" id="thumbnail" />
          </div>
          <div>
              <label>Code:</label>
              <input type="text" id="code" />
          </div>
          <div>
              <label>Stock:</label>
              <input type="text" id="stock" />
          </div>
          <button id="addProductBtn">Agregar Producto</button>
      </form>

      <form id="delete" style="flex: 1; margin-left: 20px;">
          <h3>Eliminar producto:</h3>
          <label>Product ID:</label>
          <input type="text" id="productId" />
          <button id="deleteProductBtn">Borrar Producto</button>
      </form>
  </div>

  <div id="realTimeProductList" class="productList">
      
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/realtimeProducts.js"></script>
</main>

